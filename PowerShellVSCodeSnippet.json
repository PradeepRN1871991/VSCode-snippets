	"CreateSPLists":
	{
		"prefix": "CreateSPSSOMList",
		"body":[
			"Add-PSSnapin microsoft.sharepoint.powershell",
			"\t\t\t #Function to create custom list",
			"\t Function Create-List(\\$SiteURL, \\$ListName)",
			"\t{",
			"\t  #Set the Error Action",
			"\t \\$ErrorActionPreference = 'Stop'",
			"\t\tTry",
			"\t{",
			"\t\\$Web = Get-SPWeb -Identity \\$SiteURL",
			"\t\\$ListTemplate = [Microsoft.SharePoint.SPListTemplateType]::GenericList",	
			"\t\t#Check if List with specific name exists",
		     "\t\tif(\\$Web.Lists.TryGetList(\\$ListName) -eq \\$null)",
				"\t{",
					"\t\\$List = \\$Web.Lists.Add(\\$ListName, \\$ListName, \\$ListTemplate)",
					"\twrite-host 'List Created Successfully!' -ForegroundColor Green",
				"\t}",
				"\telse",
				"\t{",
					"\twrite-host 'List with specific name already exists!' -ForegroundColor Red",
				"\t}",
			"\t}",
			"\t\tcatch {",
				"\t\tWrite-Host \\$_.Exception.Message -ForegroundColor Red",
			"\t}",
			"\tfinally",
			"\t {",
				"\t #Reset the Error Action to Default",
				"\t\\$ErrorActionPreference = 'Continue'",
			"\t}",
		"\t}",
		"\t#Parameters to create new List",
"\t\\$SiteURL='http://Test.com/'",
"\t\\$ListName = 'Customer Directory'",
 "\t#Call the function to create new custom list",
"\t Create-List \\$SiteURL \\$ListName"
			]
	}
